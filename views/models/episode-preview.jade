.row-fluid.marketing
  .span6
    h2
      a(href='/episodes/#{episodes[i].permalink}')= episodes[i].title
    - if(typeof(episodes[i].image) !== 'undefined')
        img(src="#{episodes[i].image}")
      - else
        img(src="http://placehold.it/1600x900&text=#{episodes[i].title}")
    p= episodes[i].caption
    p 
      a.btn.btn-info(href='/episodes/#{episodes[i].permalink}') Watch &nbsp;
        i.icon-play-circle.icon-white

  - if((i + 1) < episodes.length)
    .span6
      h2
        a(href='/episodes/#{episodes[i + 1].permalink}')= episodes[i + 1].title
      - if(typeof(episodes[i + 1].image) !== 'undefined')
        img(src="#{episodes[i + 1].image}")
      - else
        img(src="http://placehold.it/1600x900&text=#{episodes[i + 1].title}")

      p= episodes[i + 1].caption
      p 
        a.btn.btn-info(href='/episodes/#{episodes[i + 1].permalink}') Watch &nbsp;
          i.icon-play-circle.icon-white