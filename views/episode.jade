extends episode_layout



block content

  .row-fluid
    .span12
      .main-video-container
        - if (typeof(video) !== 'undefined')
          <iframe width="640" height="360" src="https://www.youtube-nocookie.com/embed/#{video}?rel=0" frameborder="0" allowfullscreen></iframe>
        - else
          h1 :-( Sorry, we couldn't find the video link.  Somebody on our team has brought great shame to their name.

        p
          a(href="//www.youtube.com/subscription_center?add_user_id=OzT8ij63FzF3eDmcbY2gkw&feature=creators_cornier-//s.ytimg.com/yt/img/creators_corner/Subscribe_to_my_videos/YT_Subscribe_130x36_red.png")
            img(src="//s.ytimg.com/yt/img/creators_corner/Subscribe_to_my_videos/YT_Subscribe_130x36_red.png", alt="Subscribe to me on YouTube")
          img(src="//www.youtube-nocookie.com/gen_204?feature=creators_cornier-//s.ytimg.com/yt/img/creators_corner/Subscribe_to_my_videos/YT_Subscribe_130x36_red.png", style="display: none")

  hr

  .row-fluid
    .span8.episode-body
      h1 <span style="color:#999;">##{episode_num}</span> #{title}

      -if (typeof(tags) !== 'undefined')
        .tag-bar
          each tag in tags
            span.label.label-info #{tag}

      br

      -if (typeof(date) !== 'undefined')
        - var months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"];
        - var month = months[date.getMonth()];
        - var day = date.getDate();
        - var year = date.getFullYear();
        - var dateStamp = day + " " + month + " " + year;

        span.episode-date Last Updated:&nbsp;
          = dateStamp

      br

      include ./partials/social-bar.jade

      h2 Overview
      p= caption

      - if (typeof(notes) !== 'undefined')
        != notes

    .span4
      - if (typeof(resources) !== 'undefined')
        -if (resources.length > 0)
          include ./partials/resources.jade

      - if (typeof(parts) !== 'undefined')
        -if (parts.length > 0)
          include ./partials/parts.jade
        
